{
  "name": "@leonsk32/japanese-numeral-utils",
  "version": "0.0.1",
  "description": "Utilities for handling Japanese numerals.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --testPathPattern=specs --runInBand"
  },
  "author": "leonsk32",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/specs/**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
